<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="#2e3b4e">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_dialog_alert"
            android:padding="6dp"
            android:contentDescription="Warning" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView_icon"
            android:layout_alignTop="@id/imageView_icon"
            android:textAlignment="center"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:text="Error code Name"
            android:maxLength="37"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView_icon"
            android:layout_below="@id/title"
            android:layout_marginTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="6dp"
            android:text="Error code details"
            android:textColor="#FFFFFF"
            android:maxLength="90"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
