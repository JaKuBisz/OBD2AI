<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BackgroundDarkStyle"
    tools:context=".InitialFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Let's Begin"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textView"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:scaleX="1.6"
        android:scaleY="1.6"
        android:src="@drawable/bt_brain_transparent" />

    <TextView
        android:id="@+id/textView_pair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_connect"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="1. Pair your OBD senzor"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        style="@style/TextDarkStyle" />

    <TextView
        style="@style/TextDarkStyle"
        android:id="@+id/textView_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_grant"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:text="2. Connect to the senzor"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        style="@style/ButtonDarkStyle"
        android:id="@+id/button_grant"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="112dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="50dp"
        android:text="Next"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>
